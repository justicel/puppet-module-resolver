# This file is managed by puppet. 
#
# for future reference when ndots and sortlist can be done in dhclient.conf
# we can toss this file.
#
domain <%= domainname %>
<% if not @searchpath and not @searchpath.empty? %>search <%= [@searchpath].flatten.join(" ") %>
<% end -%>
<% if not @options and not @options.empty? %>options <%= [@options].flatten.join(" ") %>
<% end -%>
<% if not @sortlist and not @sortlist.empty? %>sortlist <%= [@sortlist].flatten.join(" ") %>
<% end -%>
<% [@nameservers].flatten.each do |ns| %>nameserver <%= ns %>
<% end -%>
