# This file is managed by puppet. 
#
# for future reference when ndots and sortlist can be done in dhclient.conf
# we can toss this file.
#
domain <%= @domainname %>
<% if @searchpath %>search <%= [@searchpath].flatten.join(" ") %>
<% end -%>
<% if @options %>options <%= [@options].flatten.join(" ") %>
<% end -%>
<% if @sortlist %>sortlist <%= [@sortlist].flatten.join(" ") %>
<% end -%>
<% [@nameservers].flatten.each do |ns| %>nameserver <%= ns %>
<% end -%>
